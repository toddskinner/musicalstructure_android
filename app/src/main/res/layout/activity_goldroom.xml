<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_goldroom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightest_grey"
    tools:context="com.example.android.musicalstructure.GoldroomActivity">

    <!-- Am sure there is a way to do this without repeating each of these layouts, but don't know how yet -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purpose: Play music by the artist Goldroom"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_arrow_goldroom"
                    style="@style/song_upper_left_arrow"
                    android:src="@drawable/arrow_left" />

                <TextView
                    style="@style/song_station_name"
                    android:text="@string/now_playing" />

                <ImageView
                    style="@style/song_upper_right_thumb"
                    android:src="@drawable/thumb_up" />

            </RelativeLayout>

            <ImageView
                style="@style/song_image"
                android:src="@drawable/goldroom_song" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/song_name"
                    android:text="@string/goldroom_song"/>

                <TextView
                    style="@style/song_by"
                    android:text="@string/goldroom_artist"/>
            </LinearLayout>

            <!-- Would love to add the ability to play the songs. Guess we will learn that soon. -->

            <LinearLayout
                style="@style/song_control_bar">

                <ImageView
                    style="@style/control_item"
                    android:src="@drawable/replay" />

                <ImageView
                    style="@style/control_item"
                    android:src="@drawable/thumb_down" />

                <ImageView
                    style="@style/control_item"
                    android:src="@drawable/thumb_up" />

                <ImageView
                    style="@style/control_item"
                    android:src="@drawable/play_arrow" />

                <ImageView
                    style="@style/control_item"
                    android:src="@drawable/fast_forward" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>

